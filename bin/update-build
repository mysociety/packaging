#!/bin/bash

set -e

cd "$(dirname "$0")/.."

if [ -z "$1" ] ; then
    echo "Usage: $0 package-name | --all"
    exit 1
fi

if [ "$1" == "--all" ] ; then
    cd packages
    for dir in * ; do
        echo "==> Updating ${dir}..."
        cp ../template/bin/* "${dir}/bin/"
        cp ../template/configure "${dir}/"
    done
elif [ ! -d "packages/${1}" ] ; then
    echo "Build doesn't exist - perhaps you meant to run setup-build instead?"
    exit 2
else
    echo "==> Updating ${1}..."
    cp template/bin/* "packages/${1}/bin/"
    cp template/configure "packages/${1}/"
fi
